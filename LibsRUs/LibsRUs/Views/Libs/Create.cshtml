@model LibsRUs.Models.Lib

@{
    ViewBag.Title = "Create";
}

<h2>New Library</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control libDescription" })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LibURL, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.LibURL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LibURL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tags</label>
            <div class="col-md-10">
                <input type="text" id="tagSearch" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-10">
                <div id="tagsContainer" style="width:100%;min-height:200px;border:1px solid #ccc;">

                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Programming Languages</label>
            <div class="col-md-10">
                <input type="text" id="languageSearch" class="form-control" />
            </div>
            
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-10">
                <div id="languagesContainer" style="width:100%;min-height:200px;border:1px solid #ccc;">

                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Platforms</label>
            <div class="col-md-10">
                <input type="text" id="platformSearch" class="form-control" />
            </div>

        </div>

        <div class="form-group">
            <label class="control-label col-md-2"></label>
            <div class="col-md-10">
                <div id="platformsContainer" style="width:100%;min-height:200px;border:1px solid #ccc;">

                </div>
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts 
{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="//code.jquery.com/ui/1.11.0/jquery-ui.js"></script>
    @Scripts.Render("~/Scripts/tagSearch.js")
    <script type="text/javascript">
        $(
            function ()
            {
                $('#tagSearch').tagSearch('@Url.Action("GetLibTags", "LibTags")', '@Url.Action("GetLibTagItemRemovable", "LibTags")', '#tagsContainer' );
                $('#languageSearch').tagSearch('@Url.Action("GetProgrammingLanguages", "ProgrammingLanguages")', '@Url.Action("GetProgrammingLanguageItemRemovable", "ProgrammingLanguages")', '#languagesContainer');
                $('#platformSearch').tagSearch('@Url.Action("GetPlatforms", "Platforms")', '@Url.Action("GetPlatformItemRemovable", "Platforms")', '#platformsContainer');
            }
        )

    </script>

}
